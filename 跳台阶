public class Solution {
    public int countWays(int n) {
        if (n == 0 || n == 1) {
            return n;
        }
        int a = 1, b = 1, c = 2;
        for (int i = 3; i <= n; i++) {
            int tmp = ((a+b)%1000000007+c)%1000000007;
            a = b;
            b = c;
            c = tmp;
        }
        return c;
    }
}
